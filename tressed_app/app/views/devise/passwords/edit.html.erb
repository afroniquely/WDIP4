<header class="top-bar">
  <h3 class="top-bar-left" id="SiteTitle">
      <%= link_to "Tressed", root_path %>
  </h3>
  <div class="top-bar-right" id="useract">
    <% if user_signed_in? %>
      <%= link_to '<button type="button" class="success button">All Posts</button>'.html_safe, posts_path %>
      <%= link_to '<button type="button" class="success button">New Post</button>'.html_safe, new_post_path %>
      <%= link_to('<button type="button" class="danger button">Logout</button>'.html_safe, destroy_user_session_path, :method => :delete) %>
    <% else %>
      <%= link_to '<button type="button" class="success button">JOIN NOW</button>'.html_safe, new_user_registration_path %>
      <%= link_to '<button type="button" class="success button">LOGIN</button>'.html_safe, new_user_session_path %>
    <% end %>
  </div>
</header>

<div class="row">
<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
